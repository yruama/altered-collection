{
	"compilerOptions": {
		"target": "es2016",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "./dist"
	},
	"include": ["back/src/**/*.ts", "front/src/**/*.ts"],
	"exclude": ["node_modules", ".vscode", "**/node_modules/", "dist/", "build/", "**/dist/", "**/build/"]
}
