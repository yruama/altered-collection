{
	"compilerOptions": {
		"target": "es2016",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@type/*": ["src/types/*"],
			"@core/*": ["src/core/*"],
			"@errors/*": ["src/error-models/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", ".vscode"]
}
